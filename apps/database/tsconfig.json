{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "composite": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
